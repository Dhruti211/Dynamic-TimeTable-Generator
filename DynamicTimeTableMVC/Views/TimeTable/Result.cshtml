@model TimetableViewModel

<h2>Dynamic TimeTable</h2>
<h3>Generated Timetable</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            @for (int j = 0; j < Model.Input.WorkingDays; j++)
            {
                <th>Day @(j + 1)</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Input.SubjectsPerDay; i++)
        {
            <tr>
                @for (int j = 0; j < Model.Input.WorkingDays; j++)
                {
                    <td>@Model.GeneratedTimetable[i, j]</td>
                }
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary">Create Another</a>